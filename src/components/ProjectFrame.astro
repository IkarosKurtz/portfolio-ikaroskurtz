---
interface Props {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props
---

<div class="flex flex-col items-center mt-3">
  <h1>{title}</h1>
  <img
    src={image == ""
      ? "https://uning.es/wp-content/uploads/2016/08/ef3-placeholder-image.jpg"
      : image}
    alt={title}
    class="w-1/2"
  />
  <p>{description}</p>
</div>

<style>
  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }
</style>
